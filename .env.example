# Database Configuration
DB_PASSWORD=change-this-secure-password

# JWT Configuration
JWT_SECRET_KEY=generate-a-secure-random-key-here-use-openssl-rand-hex-32

# Web Push Notifications (Generate with: web-push generate-vapid-keys)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_CLAIM_EMAIL=your-email@example.com

# Application Settings
DEBUG=false
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Frontend API URL (set to your server's IP or domain)
# For Raspberry Pi: http://192.168.1.XXX:8000
# For production: https://your-domain.com
PUBLIC_API_URL=http://localhost:8000

# File Upload
MAX_PHOTO_SIZE_MB=10
